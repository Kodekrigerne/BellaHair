@using System.Globalization
@using BellaHair.Domain
@using BellaHair.Ports.Bookings
@using BellaHair.Presentation.WebUI.Components.Pages.Bookings.Icons
@using BellaHair.Presentation.WebUI.Components.Shared

@rendermode InteractiveServer

@inject NavigationManager NavigationManager;
@inject ISnackbar Snackbar;
@inject IBookingCommand BookingCommand;
@inject ICurrentDateTimeProvider CurrentDateTimeProvider;

<div class="bc-container" @onclick="HandleBookingClick">
	<div class="bc-header">
		<p class="bc-customer">@Booking.CustomerFullName</p>
		<div>
			<p class="bc-date">@Booking.Date.ToString("dddd, MMMM dd, yyyy", new CultureInfo("da-DK"))</p>
			<p class="bc-time">@Booking.StartTime - @Booking.EndTime</p>
		</div>
		<div style="display: flex; flex-direction: row; gap: 2px;">
			<EditButton Class="@(CanEdit() ? "edit-active" : "btn-inactive")" Title="@(CanEdit() ? null : "Denne booking kan ikke redigeres")" OnClick="HandleEditClick" />
			<BinDeleteButton Class="@(CanDelete() ? "" : "btn-inactive")" Title="@(CanDelete() ? null : "Denne booking kan ikke slettes")" OnClick="HandleDeleteClick" />
		</div>
	</div>
	<div class="bc-body">
		<div class="bc-body-left">
			<div class="bc-treatment">
				<TreatmentIcon Class="bc-treatment-icon" />
				<span class="bc-treatment-name">@Booking.TreatmentName</span>
			</div>

			<div class="bc-duration">
				<BookingDurationIcon Class="bc-duration-icon" />
				<span>@Booking.DurationMinutes min</span>
			</div>

			<div class="bc-employee">
				<EmployeeIcon Class="bc-employee-icon" />
				<span>Behandler: @Booking.EmployeeFullName</span>
			</div>
		</div>

		<div class="bc-body-right">
				<div class="bc-price">
					<span>Total:</span>
					<span>@Booking.Total.ToString("C2")</span>
					@if (Booking.DiscountName != null || Booking.DiscountAmount != null)
					{
						<DiscountIcon Class="bc-discount-icon" />
						<span>Rabat: @Booking.DiscountName</span>
						<span>-@Booking.DiscountAmount!.Value.ToString("C2")</span>
					}
				</div>
		</div>
	</div>
</div>

@code {
	[Parameter, EditorRequired]
	public required BookingViewModel Booking { get; set; }

	[Parameter]
	public EventCallback<Guid> OnClickDelete { get; set; }

	private DateTime _now;

	protected override async Task OnInitializedAsync()
	{
		await base.OnInitializedAsync();

		_now = CurrentDateTimeProvider.GetCurrentDateTime();
	}

	private void HandleBookingClick()
	{
		NavigationManager.NavigateTo($"/booking/{Booking.Id}");
	}

	private void HandleEditClick()
	{
		if (!CanEdit()) return;

		NavigationManager.NavigateTo($"/booking/{Booking.Id}/rediger");
	}

	private async Task HandleDeleteClick()
	{
		if (!CanDelete()) return;

		try
		{
			await BookingCommand.DeleteBooking(new DeleteBookingCommand(Booking.Id));
			if (OnClickDelete.HasDelegate) await OnClickDelete.InvokeAsync(Booking.Id);
			Snackbar.Add("Bookingen blev slettet.", Severity.Success);
		}
		catch (DomainException ex) { Snackbar.Add(ex.Message, Severity.Error); }
		catch { Snackbar.Add("Noget gik galt.", Severity.Error); }
	}

	private bool CanEdit()
	{
		if (Booking.IsPaid) return false;
		if (Booking.StartDateTime < _now) return false;
		return true;
	}

	private bool CanDelete()
	{
		if (Booking.IsPaid) return false;
		if (Booking.StartDateTime < _now && Booking.StartDateTime.Date == _now.Date) return false;
		return true;
	}
}

