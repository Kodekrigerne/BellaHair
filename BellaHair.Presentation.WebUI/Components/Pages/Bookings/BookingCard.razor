@using System.Globalization
@using BellaHair.Presentation.WebUI.Components.Pages.Bookings.Icons
@using BellaHair.Ports.Invoices
@inject IInvoiceQuery InvoiceQuery

<div class="bc-container">

	<div>
		<button class="btn-add" @onclick="@HandleInvoiceClick">Se faktura</button>
	</div>

	<div class="bc-header">
		<p class="bc-customer">@Booking.CustomerFullName</p>
		<div>
			<p class="bc-date">@Booking.Date.ToString("dddd, MMMM dd, yyyy", new CultureInfo("da-DK"))</p>
			<p class="bc-time">@Booking.StartTime - @Booking.EndTime</p>
		</div>
	</div>
	<div class="bc-body">
		<div class="bc-body-left">
			<div class="bc-treatment">
				<TreatmentIcon Class="bc-treatment-icon" />
				<span class="bc-treatment-name">@Booking.TreatmentName</span>
			</div>

			<div class="bc-duration">
				<DurationIcon Class="bc-duration-icon" />
				<span>@Booking.DurationMinutes min</span>
			</div>

			<div class="bc-employee">
				<EmployeeIcon Class="bc-employee-icon" />
				<span>Behandler: @Booking.EmployeeFullName</span>
			</div>
		</div>

		@if (Booking.DiscountName != null || Booking.DiscountAmount != null)
		{
			<div class="bc-discount">
				<DiscountIcon Class="bc-discount-icon" />
				<span>
					@if (Booking.DiscountName != null)
					{
						<span>@Booking.DiscountName</span>
					}
					@if (Booking.DiscountAmount != null)
					{
						<span class="bc-discount-amount">-@Booking.DiscountAmount dkk</span>
					}
				</span>
			</div>
		}
	</div>
</div>

@code {
	[Parameter, EditorRequired]
	public required BookingSimpleViewModel Booking { get; set; }

	public async Task HandleInvoiceClick()
	{
		await InvoiceQuery.CreateAndPrintInvoice(Booking.Id);
	}
}

