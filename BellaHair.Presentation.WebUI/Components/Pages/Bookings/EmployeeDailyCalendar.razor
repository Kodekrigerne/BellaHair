@using BellaHair.Presentation.WebUI.Components.Pages.Employees
@using System.Globalization
@using Microsoft.Extensions.Options

@inject NavigationManager NavigationManager
@inject IJSRuntime JSRuntime
@inject IOptions<OpeningTimesSettings> OpeningTimes

<div class="day-container">
    @if (EmployeeBookingData.Count == 0) { <p>Ingen medarbejdere fundet med den valgte behandling</p> }
    else {
        <div class="day-header">
            <button @onclick="HandlePreviousDateClick" class="nav-button">&lt;</button>
            <span class="current-date">@CurrentDate.ToString("dddd, dd. MMMM yyyy", new CultureInfo("da-DK"))</span>
            <button @onclick="HandleNextDateClick" class="nav-button">&gt;</button>
        </div>

        <div class="calendar-wrapper">
            <div class="day-calendar-header">
                <div class="header-spacer"></div>
                @foreach (var hour in _hours)
                {
                    <div class="hour-marker">
                        <span class="hour-label">@hour:00</span>
                    </div>
                }
            </div>

            <div class="day-calendar">
                @foreach (var employee in EmployeeBookingData)
                {
                    <div class="day-row">
                        <div class="employee-name">
                            <span>@employee.Name</span>
                        </div>
                        <div class="day-hours">
                            @foreach (var hour in _hours)
                            {
                                <div class="day-hour"></div>
                            }
                            @foreach (var booking in employee.Bookings.Where(b => b.StartDateTime.Date == CurrentDate.Date))
                            {
                                <div @onclick="@(() => HandleBookingClick(booking.Id))" class="appointment"
                                     style="left: @(GetBookingStart(booking))rem; width: @(GetBookingWidth(booking))rem;"
                                     title="@booking.StartDateTime.ToString("HH:mm") - @booking.EndDateTime.ToString("HH:mm")">
                                    @* <span class="appointment-time">@booking.StartDateTime.ToString("HH:mm")</span> *@
                                </div>
                            }
                        </div>
                    </div>
                }
            </div>
        </div>
    }
</div>

@code {
    [Parameter, EditorRequired]
    public required DateTime CurrentDate { get; set; }

    [Parameter, EditorRequired]
    public required List<EmployeeNameWithBookingsViewModel> EmployeeBookingData { get; set; }

    [Parameter]
    public EventCallback<DateTime> CurrentDateChanged { get; set; }

    private int[] _hours = [];
    private const int HourWidthRem = 4;
    private const int MinutesPerHour = 60;
    private int _openingHour;

    protected override async Task OnInitializedAsync()
    {
        await base.OnInitializedAsync();

        _hours = Enumerable.Range(OpeningTimes.Value.OpeningTime.Hour, (OpeningTimes.Value.ClosingTime.Hour - OpeningTimes.Value.OpeningTime.Hour)).ToArray();
        _openingHour = OpeningTimes.Value.OpeningTime.Hour;
    }

    private double GetBookingStart(BookingTimesOnlyViewModel booking)
    {
        var openingTime = booking.StartDateTime.Date.AddHours(_openingHour);
        var minutesSinceOpeningTime = (booking.StartDateTime - openingTime).TotalMinutes;
        return (minutesSinceOpeningTime / MinutesPerHour) * HourWidthRem;
    }

    private double GetBookingWidth(BookingTimesOnlyViewModel booking)
    {
        var durationMinutes = (booking.EndDateTime - booking.StartDateTime).TotalMinutes;
        return (durationMinutes / MinutesPerHour) * HourWidthRem;
    }

    private async Task HandleBookingClick(Guid id)
    {
        //Blazor kan ikke åbne links i ny tab, så vi bruger blazors javascript runtime til det
        await JSRuntime.InvokeVoidAsync("open", NavigationManager.BaseUri + $"booking/{id}", "_blank");
    }

    private async Task HandlePreviousDateClick()
    {
        int daysToMove;
        if (CurrentDate.DayOfWeek == DayOfWeek.Monday) daysToMove = -3;
        else daysToMove = -1;
        await CurrentDateChanged.InvokeAsync(CurrentDate.AddDays(daysToMove));
    }

    private async Task HandleNextDateClick()
    {
        int daysToMove;
        if (CurrentDate.DayOfWeek == DayOfWeek.Friday) daysToMove = 3;
        else daysToMove = 1;
        await CurrentDateChanged.InvokeAsync(CurrentDate.AddDays(daysToMove));
    }
}

<style>
